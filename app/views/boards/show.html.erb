<div class="container pt-5">
  <div class="row mb-3">
    <div class="col-lg-8 offset-lg-2">
      <h1>掲示板詳細</h1>
      <!-- 掲示板内容 -->
      <article class="card">
        <div class="card-body">
          <div class='row'>
            <div class='col-md-3'>
              <!-- image_tagを使う形に修正 -->
              <%= image_tag "sample.jpg", class: "card-img-top img-fluid", width: 300, height: 200 %>
            </div>
            <div class='col-md-9'>
              <h3 style='display: inline;'><%= @board.title %></h3>
              <ul class="list-inline">
                <li class="list-inline-item">by <%= @user.full_name %></li>
                <li class="list-inline-item"><%= l @board.created_at, format: :created %></li>
              </ul>
                <div class='d-flex justify-content-end'>
                <!-- link_toを使う形に修正 -->
                <%= link_to edit_board_path(25), id: "button-edit-25" do %>
                  <i class='bi bi-pencil-fill'></i>
                <% end %>
                <%= link_to @board, method: :delete, data: { confirm: '本当に削除しますか？' }, id: "button-delete-25" do %>
                  <i class="bi bi-trash-fill"></i>
                <% end %>
              </div>
            </div>
          </div>
          <p><%= @board.body %></p>
        </div>
      </article>
    </div>
  </div>

  <!-- コメントフォーム -->
  <div class="row mb-3" id="comment-form">
    <div class="col-lg-8 offset-lg-2">
      <%= render  "boards/comments/form" %>
    </div>
  </div>

  <!-- コメントエリア -->
  <div class="row">
    <div class="col-lg-8 offset-lg-2">
      <table class="table">
      <%= render "boards/comments/comment" %>
      </table>
    </div>
  </div>
</div>

