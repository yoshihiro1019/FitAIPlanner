<div class="container pt-3">
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <!-- 検索フォーム -->
      <form>
        <div class="input-group mb-3"><input class="form-control" placeholder="検索ワード" type="search"/>
          <div class="input-group-append"><input type="submit" value="検索" class="btn btn-primary"/></div>
        </div>
      </form>
    </div>
  </div>
  <!-- 掲示板一覧 -->
  <div class="row">
    <div class="col-12">
      <div class="row">
        <% if @boards.present? %>
         <% @boards.each do |board| %>
          <div class="col-12 mb-3">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title"><%= board.title %></h5>
                <p><%= board.user.decorate.full_name %></p>
                <p class="card-text"><%= board.body %></p>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
          <div class="mb-3">掲示板がありません</div>
        <% end %>
      </div>
    </div>
  </div>
</div>