<% title 'ブックマーク一覧' %>
<div class="container pt-3">
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <!-- 検索フォーム -->
      <%= search_form_for @q, url: bookmarks_boards_path, method: :get do |f| %>
        <div class="input-group mb-3">
          <%= f.search_field :board_title_or_board_body_cont, placeholder: "検索ワード", class: "form-control" %>
          <div class="input-group-append">
            <%= f.submit "検索", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <!-- ブックマーク一覧 -->
  <div class="row">
    <div class="col-12">
      <div class="row">
        <% if @bookmarks.present? %>
          <% @bookmarks.each do |bookmark| %>
            <%= render partial: "bookmarks/bookmark_button", locals: { bookmark: bookmark } %>
          <% end %>
        <% else %>
          <div class="mb-3">ブックマークがありません</div>
        <% end %>
      </div>
      <!-- ページネーションリンク -->
      <% if @bookmarks.total_count > 20 %>
        <div class="d-flex justify-content-center">
          <%= paginate @bookmarks %>
        </div>
      <% end %>
    </div>
  </div>
</div>
