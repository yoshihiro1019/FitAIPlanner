<% content_for :title, 'FitAIplanner マイページ' %>
<!DOCTYPE html>
<html lang="ja">
<head>
  <title><%= page_title(yield(:title), admin: true) %></title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>トレーニング記録</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
</head>
<body>
  

  <div class="container">
    <!-- サイドメニュー -->
    <nav class="sidebar">
      <div class="user-info">
        <button>名前</button>
      </div>
      <ul class="menu">
        <li><%= link_to '記録帳', trainings_path %></li>
        <li><a href="<%= training_suggestions_path %>">トレーニング提案機能</a></li>
        <li><a href="<%= gemini_training_suggestions_path %>">トレーニング提案機能gemini</a></li>
        <li><a href="<%= bgm_selection_path %>">BGM</a></li>
        <li><%= link_to 'ジムを探す', gyms_path %></li> <!-- ここに追加 -->
        <li><%= link_to "新しいトレーニング提案ページ", trainings_new_training_suggestion_path %></li>
      </ul>
    </nav>

    <!-- メインコンテンツ -->
    <main class="content">
      <%= yield %> <!-- ここに各ビューのコンテンツが表示される -->
    </main>
  </div>


</body>
</html>
