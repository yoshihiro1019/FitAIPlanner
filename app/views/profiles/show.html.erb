<div class="container pt-3">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h1 class="float-left mb-5">プロフィール</h1>
      <%= link_to '編集', edit_profile_path, class: 'btn btn-success float-right' %>
      <table class="table">
        <tr>
          <th scope="row">メールアドレス</th>
          <td><%= current_user.email %></td>
        </tr>
        <tr>
          <th scope="row">氏名</th>
          <td><%= "#{current_user.first_name} #{current_user.last_name}" %></td>
        </tr>
        <tr>
          <th scope="row">アバター</th>
          <td>
            <% if current_user.avatar? %>
              <%= image_tag current_user.avatar.url, class: 'rounded-circle', size: '50x50' %>
            <% else %>
              <p>アバター画像がありません</p>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>
